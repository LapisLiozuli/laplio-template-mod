{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "Laplio's Template Mod",
  "description": "To generate mods with minimal number of steps.",
  "authors": [
    "LapisLiozuli"
  ],
  "contact": {
    "homepage": "",
    "sources": "https://github.com/LapisLiozuli/laplio-template-mod"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.lapisliozuli.modid.ExampleMod"
    ],
    "client": [
      "com.lapisliozuli.modid.ExampleModClient"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric": "*",
    "minecraft": "1.16.5",
    "java": ">=8"
  },
  "suggests": {
    "another-mod": "*"
  }
}
